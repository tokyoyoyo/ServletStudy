<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">


    <servlet>
        <servlet-name>request</servlet-name>
        <servlet-class>com.jie.servlet.RequestTest</servlet-class>
    </servlet>
    <!--            请求路径-->
    <servlet-mapping>
        <servlet-name>request</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>goim</servlet-name>
        <servlet-class>com.jie.servlet.RedirectServlet</servlet-class>
    </servlet>
    <!--            请求路径-->
    <servlet-mapping>
        <servlet-name>goim</servlet-name>
        <url-pattern>/goim</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>im</servlet-name>
        <servlet-class>com.jie.servlet.ImageServlet</servlet-class>
    </servlet>
    <!--            请求路径-->
    <servlet-mapping>
        <servlet-name>im</servlet-name>
        <url-pattern>/im</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>down</servlet-name>
        <servlet-class>com.jie.servlet.FileServlet</servlet-class>
    </servlet>
    <!--            请求路径-->
    <servlet-mapping>
        <servlet-name>down</servlet-name>
        <url-pattern>/down</url-pattern>
    </servlet-mapping>

</web-app>